{
  "name": "postcss-between",
  "version": "1.0.0",
  "description": "PostCSS plugin that handles spacing between blocks for a more readable stylesheet",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "line",
    "lines",
    "newline",
    "newlines",
    "format",
    "formatting",
    "spacing",
    "whitespace",
    "blank",
    "block",
    "readable",
    "readability",
    "scannable",
    "scannability"
  ],
  "author": "tjgavlick <8879532+tjgavlick@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjgavlick/postcss-between.git"
  },
  "bugs": {
    "url": "https://github.com/tjgavlick/postcss-between/issues"
  },
  "homepage": "https://github.com/tjgavlick/postcss-between",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "npm": "^6.4.1",
    "postcss": "^6.0.16"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^22.4.2"
  },
  "scripts": {
    "test": "jest --coverage && eslint *.js"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true,
      "es6": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "_comment": "constrain line length to about a github diff view"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
