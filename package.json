{
  "name": "postcss-between",
  "version": "0.1.0",
  "description": "PostCSS plugin that handles spacing between blocks for a more readable stylesheet",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "line",
    "lines",
    "newline",
    "newlines",
    "format",
    "formatting",
    "spacing",
    "whitespace",
    "blank",
    "readable",
    "readability",
    "scannable",
    "scannability"
  ],
  "author": "tjgavlick <tjgavlick@gmail.com>",
  "license": "MIT",
  "repository": "tjgavlick/postcss-between",
  "bugs": {
    "url": "https://github.com/tjgavlick/postcss-between/issues"
  },
  "homepage": "https://github.com/tjgavlick/postcss-between",
  "dependencies": {
    "postcss": "^6.0.16"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^22.4.2"
  },
  "scripts": {
    "test": "jest --coverage && eslint *.js"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true,
      "es6": true
    },
    "rules": {
      "indent": ["error", 2],
      "max-len": ["error", { "code": 120 }],
      "_comment": "constrain line length to about a github diff view"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
